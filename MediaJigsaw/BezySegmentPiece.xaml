<Page x:Class="MediaJigsaw.BezySegmentPiece"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
	Title="BezySegmentPiece">
    <StackPanel>
        <Canvas>
            <Path Stroke="Plum" StrokeThickness="3">
                <Canvas.Left>0</Canvas.Left>
                <Canvas.Top>0</Canvas.Top>
                <Path.Fill>
                    <ImageBrush ImageSource="Images/Penguins.jpg"
                                Viewbox="0, 0, 600, 600"
                                ViewboxUnits="Absolute"
                                Viewport="0, 0, 600, 600"
                                ViewportUnits="Absolute"
                                Stretch="None"
                                ></ImageBrush>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigureCollection>
                                <!-- The StartPoint specifies the starting point of the first curve. -->
                                <!-- 0, 0 -->
                                <PathFigure StartPoint="0,0">
                                    <PathFigure.Segments>
                                        <PathSegmentCollection>
                                            <LineSegment Point="200,0" />
                                            <PolyBezierSegment Points="200,45 0,100 180,160" />
                                            <PolyBezierSegment Points="120,200 180,300 100,260" />
                                            <PolyBezierSegment Points="60,240 40,200 0,200" />
                                            <LineSegment Point="0,0" />
                                        </PathSegmentCollection>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathFigureCollection>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <Path Stroke="Plum" StrokeThickness="3">
                <Canvas.Left>0</Canvas.Left>
                <Canvas.Top>100</Canvas.Top>
                <Path.Fill>
                    <ImageBrush ImageSource="Images/Penguins.jpg"
                                Viewbox="0, 100, 600, 600"
                                ViewboxUnits="Absolute"
                                Viewport="0, 0, 600, 600"
                                ViewportUnits="Absolute"
                                Stretch="None"
                                ></ImageBrush>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigureCollection>
                                <!-- The StartPoint specifies the starting point of the first curve. -->
                                <!-- 0, 1 -->
                                <PathFigure StartPoint="0,100">
                                    <PathFigure.Segments>
                                        <PathSegmentCollection>
                                            <PolyBezierSegment Points="40,100 60,140 100,160" />
                                            <PolyBezierSegment Points="100,220 220,260 140,320" />
                                            <PolyBezierSegment Points="40,320 100,400 0,300" />
                                            <LineSegment Point="0,100" />
                                        </PathSegmentCollection>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathFigureCollection>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
                
                
            </Path>

            <Path Stroke="Plum" StrokeThickness="3">
                <Canvas.Left>0</Canvas.Left>
                <Canvas.Top>300</Canvas.Top>
                <Path.Fill>
                    <ImageBrush ImageSource="Images/Penguins.jpg"
                                Viewbox="0, 300, 600, 600"
                                ViewboxUnits="Absolute"
                                Viewport="0, 0, 600, 600"
                                ViewportUnits="Absolute"
                                Stretch="None"
                                ></ImageBrush>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigureCollection>
                                <!-- The StartPoint specifies the starting point of the first curve. -->
                                <!-- 0, 1 -->
                                <PathFigure StartPoint="0,100">
                                    <PathFigure.Segments>
                                        <PathSegmentCollection>
                                            <PolyBezierSegment Points="100,200 40,120 140,120" />
                                            <PolyBezierSegment Points="220,130 120,200 210,340" />
                                            <PolyBezierSegment Points="160,340 100,300 0,300" />
                                            <LineSegment Point="0,00" />
                                        </PathSegmentCollection>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathFigureCollection>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
            
            <Path Stroke="Plum" StrokeThickness="3">
                <Canvas.Left>0</Canvas.Left>
                <Canvas.Top>500</Canvas.Top>
                <Path.Fill>
                    <ImageBrush ImageSource="Images/Penguins.jpg"
                                Viewbox="0, 500, 600, 600"
                                ViewboxUnits="Absolute"
                                Viewport="0, 0, 600, 600"
                                ViewportUnits="Absolute"
                                Stretch="None"
                                ></ImageBrush>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigureCollection>
                                <!-- The StartPoint specifies the starting point of the first curve. -->
                                <!-- 0, 1 -->
                                <PathFigure StartPoint="0,100">
                                    <PathFigure.Segments>
                                        <PathSegmentCollection>
                                            <PolyBezierSegment Points="100,100 160,140 210,140" />
                                            <PolyBezierSegment Points="50,200 140,150 200,300" />
                                            <LineSegment Point="0,300" />
                                            <LineSegment Point="0,100" />
                                        </PathSegmentCollection>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathFigureCollection>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
          
            <Path Stroke="Plum" StrokeThickness="3">
                <Canvas.Left>100</Canvas.Left>
                <Canvas.Top>0</Canvas.Top>
                <Path.Fill>
                    <ImageBrush ImageSource="Images/Penguins.jpg"
                                Viewbox="100, 0, 600, 600"
                                ViewboxUnits="Absolute"
                                Viewport="0, 0, 600, 600"
                                ViewportUnits="Absolute"
                                Stretch="None"
                                ></ImageBrush>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigureCollection>
                                <!-- The StartPoint specifies the starting point of the first curve. -->
                                <!-- 0, 1 -->
                                <PathFigure StartPoint="100,0">
                                    <PathFigure.Segments>
                                        <PathSegmentCollection>
                                            <PolyBezierSegment Points="100,45 -100,100 80,160" />
                                            <PolyBezierSegment Points="140,120 200,180 220,200" />
                                            <PolyBezierSegment Points="230,180 380,160 300,0" />
                                            <LineSegment Point="100,0" />
                                        </PathSegmentCollection>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathFigureCollection>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
            
            <Path Stroke="Plum" StrokeThickness="3">
                <Canvas.Left>100</Canvas.Left>
                <Canvas.Top>100</Canvas.Top>
                <Path.Fill>
                    <ImageBrush ImageSource="Images/Penguins.jpg"
                                Viewbox="100, 100, 600, 600"
                                ViewboxUnits="Absolute"
                                Viewport="0, 0, 600, 600"
                                ViewportUnits="Absolute"
                                Stretch="None"
                                ></ImageBrush>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigureCollection>
                                <!-- The StartPoint specifies the starting point of the first curve. -->
                                <!-- 0, 1 -->
                                <PathFigure StartPoint="80,60">
                                    <PathFigure.Segments>
                                        <PathSegmentCollection>
                                            <PolyBezierSegment Points="140,20 200,80 220,100" />
                                            <PolyBezierSegment Points="210,140 240,180 280,170" />
                                            <PolyBezierSegment Points="250,250 170,255 170,260" />
                                            <PolyBezierSegment Points="165,300 150,350 120,360" />
                                            <PolyBezierSegment Points="120,320 80,320 40,320" />
                                            <PolyBezierSegment Points="120,260 0,220 0,160" />
                                            <PolyBezierSegment Points="80,200 20,100 80,60" />
                                        </PathSegmentCollection>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathFigureCollection>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
            
            
        </Canvas>
    </StackPanel>
</Page>
